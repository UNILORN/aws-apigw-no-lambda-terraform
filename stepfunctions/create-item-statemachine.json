{
  "Comment": "A state machine that creates an item in DynamoDB.",
  "StartAt": "CreateItem",
  "States": {
    "CreateItem": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:putItem",
      "Parameters": {
        "TableName": "${DYNAMODB_TABLE_NAME}",
        "Item": {
          "id": {
            "S.$": "$.id"
          },
          "task": {
            "S.$": "$.task"
          },
          "timestamp": {
            "S.$": "$$.State.EnteredTime"
          }
        }
      },
      "End": true
    }
  }
}