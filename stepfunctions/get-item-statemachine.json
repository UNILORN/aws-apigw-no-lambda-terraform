{
  "Comment": "A state machine that gets an item from DynamoDB.",
  "StartAt": "GetItem",
  "States": {
    "GetItem": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:getItem",
      "Parameters": {
        "TableName": "${DYNAMODB_TABLE_NAME}",
        "Key": {
          "id": {
            "S.$": "$.id"
          }
        }
      },
      "End": true
    }
  }
}